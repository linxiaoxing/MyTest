<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/dp5"
    android:layout_height="wrap_content">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp110"
        app:delay_time="3000"
        app:indicator_drawable_selected="@drawable/shape_dots_select"
        app:indicator_drawable_unselected="@drawable/shape_dots_default"
        app:indicator_height="@dimen/dp6"
        app:indicator_width="@dimen/dp6"
        app:scroll_time="1500"/>
</FrameLayout>