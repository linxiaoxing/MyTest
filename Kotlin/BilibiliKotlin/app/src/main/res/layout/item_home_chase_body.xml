<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/dp5"
    android:layout_marginTop="@dimen/dp5"
    android:paddingLeft="@dimen/dp10"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp4"
        app:cardElevation="@dimen/dp0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_video_preview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/tv_video_follow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_shadow_normal_reserve"
                android:padding="@dimen/dp4"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toBottomOf="@id/iv_video_preview"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp4"
        app:layout_constraintTop_toBottomOf="@+id/card_view">

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp2"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp4"
            android:text="xxxx"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/tv_video_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp2"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp4"
            android:text="xxxx"
            android:textColor="@color/black_alpha_60"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintTop_toBottomOf="@id/tv_video_title"/>

        <TextView
            android:id="@+id/tv_video_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp2"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp4"
            android:text="xxxx"
            android:textColor="@color/black_alpha_60"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintTop_toBottomOf="@id/tv_video_update"/>
    </LinearLayout>
</LinearLayout>