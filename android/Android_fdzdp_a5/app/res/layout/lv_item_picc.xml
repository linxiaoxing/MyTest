<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/SignStarImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star0" />

        <TextView
            android:id="@+id/picc_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SignStarImg"
            android:text="TextView"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/picc_item_iv"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@+id/picc_item_content"
            android:src="@drawable/placeholder_loading"
            android:visibility="gone" />

        <TextView
            android:id="@+id/SignNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/picc_item_iv"
            android:text="TextView" />

        <TextView
            android:id="@+id/SignTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/SignNick"
            android:text="TextView" />
    </RelativeLayout>

</LinearLayout>