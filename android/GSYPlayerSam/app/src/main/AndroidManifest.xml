<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gsyplayersam">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".simple.SimpleActivity" />

        <activity android:name=".simple.SimplePlayer" />
        <activity android:name=".simple.SimpleDetailActivityMode1" />
        <activity android:name=".simple.SimpleDetailActivityMode2" />
        <activity android:name=".simple.SimpleListVideoActivityMode1" />
        <activity android:name=".simple.SimpleListVideoActivityMode2" />
        <activity android:name=".PlayActivity" />
        <activity android:name=".ListVideoActivity" />
        <activity android:name=".RecyclerViewActivity" />
        <activity android:name=".RecyclerView2Activity" />
        <activity android:name=".AutoPlayRecyclerViewActivity" />
        <activity android:name=".ScrollingActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_scrolling"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".DetailPlayer" />

        <activity android:name=".DetailListPlayer" />

        <activity android:name=".WebDetailActivity" />

        <activity android:name=".DanmkuVideoActivity" />

        <activity android:name=".FragmentVideoActivity" />
    </application>

</manifest>